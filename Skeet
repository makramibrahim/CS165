 *       Draw Bird on the screen
 ******************************************/
void ToughBird::draw()
{
	drawToughBird(point, 12, hits); 

}

/*******************************************
 * Hit BIRD : Draw
 * kill the tough bird after 3 shots. 
 ******************************************/
int ToughBird::hit()
{
	hits--;

	if (hits <= 0)
	{
		kill();
	}

	return 5; 
}
